<%= form_for(@choice, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @choice.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@choice.errors.count, "error") %> prohibited this choice from being saved:</h4>

      <ul>
      <% @choice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student_id, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :student_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ch_array, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :ch_array, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :time, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.date_select :time, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :total, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
