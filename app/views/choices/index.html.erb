<div class="page-header">
  <%= link_to new_choice_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Choice
  <% end %>
  <h1>Listing choices</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Student</th>
            <th>Ch array</th>
            <th>Time</th>
            <th>Total</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @choices) do |choice| %>
            <td><%= choice.student_id %></td>
            <td><%= choice.ch_array %></td>
            <td><%= choice.time %></td>
            <td><%= choice.total %></td>
            <td><%= link_to 'Show', choice %></td>
        <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
        <td><%= link_to 'Destroy', choice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
